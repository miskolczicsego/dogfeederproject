{% extends 'base.html.twig' %}

{% block body %}
    <h1>User</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Firstname</th>
            <td>{{ user.firstName }}</td>
        </tr>
        <tr>
            <th>Lastname</th>
            <td>{{ user.lastName }}</td>
        </tr>
        <tr>
            <th>Username</th>
            <td>{{ user.userName }}</td>
        </tr>
        <tr>
            <th>Password</th>
            <td>{{ user.password }}</td>
        </tr>
        <tr>
            <th>City</th>
            <td>{{ user.city }}</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>{{ user.address }}</td>
        </tr>
        <tr>
            <th>Genre</th>
            <td>{{ user.genre }}</td>
        </tr>
        <tr>
            <th>Comment</th>
            <td>{{ user.comment }}</td>
        </tr>
        <tr>
            <th>Phonenumber</th>
            <td>{{ user.phoneNumber }}</td>
        </tr>
        <tr>
            <th>Regdate</th>
            <td>{% if user.regDate %}{{ user.regDate|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
